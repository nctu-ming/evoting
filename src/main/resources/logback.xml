<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY/MM/dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.apache.ratis.server" level="ERROR"/>
    <logger name="org.apache.ratis.grpc" level="ERROR"/>
    <logger name="org.apache.ratis.util" level="ERROR"/>
    <logger name="org.apache.ratis.metrics" level="ERROR"/>
</configuration>